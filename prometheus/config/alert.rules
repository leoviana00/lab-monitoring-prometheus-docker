groups:

# Grupo targets
- name: Monitoring Targets Services
  rules:
  - alert: Serviço parado
    expr: up == 0
    for: 30s
    labels:
      severity: critical
    annotations:
      summary: "Monitorar serviço não operacional"
      description: "Serviço {{ $labels.instance }} está parado."

# Grupo Hosts
- name: Monitoring VM
  rules:

  - alert: Alta carga de CPU
    expr: 100 - (avg by(instance) (rate(node_cpu_seconds_total{mode="idle"}[2m])) * 100) > 80
    for: 0m
    labels:
      severity: warning
    annotations:
      summary: Alta carga de CPU do host (instance {{ $labels.instance }})
      description: "Carga de CPU é > 80%"
  
  - alert: Host sem espaço em disco
    expr: (node_filesystem_avail_bytes * 100) / node_filesystem_size_bytes < 10 and ON (instance, device, mountpoint) node_filesystem_readonly == 0
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: Host sem espaço em disco(instance {{ $labels.instance }})
      description: "Disk is almost full (< 10% left)"

  - alert: Host sem memória
    expr: node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100 < 10
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: Host sem memória (instance {{ $labels.instance }})
      description: "A memória do nó está enchendo (< 10% left)"


# Grupo container
- name: Serviços dockerizados
  rules:
  - alert: Container Morto
    expr: time() - container_last_seen > 60
    for: 0m
    labels:
      severity: warning
    annotations:
      summary: Contêiner morto (instance {{ $labels.instance }})
      description: "Um contêiner morreu"

  - alert: Uso da CPU do contêiner
    expr: (sum(rate(container_cpu_usage_seconds_total{name!=""}[3m])) BY (instance, name) * 100) > 80
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: Uso da CPU do contêiner (instance {{ $labels.instance }})
      description: "O uso da CPU do contêiner está acima 80%"

  - alert: Uso de memória do contêiner
    expr: (sum(container_memory_working_set_bytes{name!=""}) BY (instance, name) / sum(container_spec_memory_limit_bytes > 0) BY (instance, name) * 100) > 80
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: Uso de memória do contêiner (instance {{ $labels.instance }})
      description: "O uso de memória do contêiner está acima 80%"

  - alert: Uso do Volume do Contêiner
    expr: (1 - (sum(container_fs_inodes_free{name!=""}) BY (instance) / sum(container_fs_inodes_total) BY (instance))) * 100 > 80
    for: 2m
    labels:
      severity: warning
    annotations:
      summary: Uso do Volume do Contêiner (instance {{ $labels.instance }})
      description: "O uso do volume do contêiner está acima 80%"